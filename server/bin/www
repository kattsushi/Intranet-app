#!/usr/bin/env node
'use strict'

// Cargar archivos de Configuracion, Aplicacion y Debug
  var debug = require('debug')('server');
  var app = require('../app');
  var config = require('../lib/config')

// Set y Configuracion del puerto de la Aplicacion
  app.set('port', process.env.PORT || config().serverPort);

  var server = app.listen(config().serverPort, function() {
    console.log('El servidor Express Js esta corriendo en el puerto : ' + server.address().port);
    console.log(__dirname);
    debug('El servidor Express Js esta corriendo en el puerto : ' + server.address().port);
  });
